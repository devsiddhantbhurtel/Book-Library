@{
    ViewData["Title"] = "User Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-person-badge-fill me-2"></i>User Profile
                    </h2>
                    <p class="text-muted mb-0">Manage your personal information</p>
                </div>
            </div>

            <div id="profileContainer" class="profile-card fade-in">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading profile...</span>
                    </div>
                    <p class="text-muted mt-2">Loading your profile...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fade-in {
        animation: fadeIn 0.3s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .profile-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 .5rem 1.5rem rgba(0,0,0,.08);
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, #6366f1, #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2.5rem;
        transition: transform 0.3s ease;
    }

    .profile-avatar:hover {
        transform: scale(1.05);
    }

    .profile-field {
        background: #f8f9fa;
        border-radius: 0.75rem;
        padding: 1rem 1.25rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .profile-field:hover {
        background: #f0f1f2;
    }

    .profile-label {
        color: #6c757d;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .profile-value {
        color: #212529;
        font-size: 1rem;
    }

    .edit-profile-field {
        border: 2px solid #e9ecef;
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
    }

    .edit-profile-field:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.1);
    }

    .profile-role-badge {
        font-size: 0.875rem;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
    }

    .btn-profile {
        padding: 0.625rem 1.25rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .btn-profile:hover {
        transform: translateY(-2px);
    }
</style>

<script>
async function loadProfile(editMode = false) {
    const container = document.getElementById('profileContainer');
    try {
        const res = await fetch('/api/user/profile', {credentials:'same-origin'});
        if (!res.ok) throw new Error('Not logged in or error fetching profile.');
        const user = await res.json();
        
        if (!editMode) {
            container.innerHTML = `
                <div class="text-center mb-4">
                    <div class="profile-avatar">
                        <i class="bi bi-person-fill"></i>
                    </div>
                </div>
                
                <div class="profile-field">
                    <div class="profile-label">
                        <i class="bi bi-person me-2"></i>Full Name
                    </div>
                    <div class="profile-value" id="profileFullName">${user.fullName || ''}</div>
                </div>

                <div class="profile-field">
                    <div class="profile-label">
                        <i class="bi bi-envelope me-2"></i>Email Address
                    </div>
                    <div class="profile-value" id="profileEmail">${user.email || ''}</div>
                </div>

                <div class="profile-field">
                    <div class="profile-label">
                        <i class="bi bi-shield-lock me-2"></i>Account Type
                    </div>
                    <div class="profile-value">
                        <span class="badge profile-role-badge bg-primary">
                            <i class="bi bi-person-badge me-1"></i>${user.role}
                        </span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button id="editProfileBtn" class="btn btn-primary btn-profile">
                        <i class="bi bi-pencil me-2"></i>Edit Profile
                    </button>
                </div>
            `;
            
            document.getElementById('editProfileBtn').onclick = function() { loadProfile(true); };
        } else {
            container.innerHTML = `
                <div class="text-center mb-4">
                    <div class="profile-avatar">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <h4 class="mb-1">Edit Profile</h4>
                    <p class="text-muted">Update your personal information</p>
                </div>

                <div class="mb-4">
                    <label class="profile-label">
                        <i class="bi bi-person me-2"></i>Full Name
                    </label>
                    <input type="text" 
                           id="editFullName" 
                           class="form-control edit-profile-field" 
                           value="${user.fullName || ''}"
                           placeholder="Enter your full name">
                </div>

                <div class="mb-4">
                    <label class="profile-label">
                        <i class="bi bi-envelope me-2"></i>Email Address
                    </label>
                    <input type="email" 
                           id="editEmail" 
                           class="form-control edit-profile-field" 
                           value="${user.email || ''}"
                           placeholder="Enter your email">
                </div>

                <div class="profile-field">
                    <div class="profile-label">
                        <i class="bi bi-shield-lock me-2"></i>Account Type
                    </div>
                    <div class="profile-value">
                        <span class="badge profile-role-badge bg-primary">
                            <i class="bi bi-person-badge me-1"></i>${user.role}
                        </span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button id="cancelProfileBtn" class="btn btn-light btn-profile">
                        <i class="bi bi-x me-2"></i>Cancel
                    </button>
                    <button id="saveProfileBtn" class="btn btn-primary btn-profile">
                        <i class="bi bi-check2 me-2"></i>Save Changes
                    </button>
                </div>
            `;

            document.getElementById('saveProfileBtn').onclick = async function() {
                const fullName = document.getElementById('editFullName').value.trim();
                const email = document.getElementById('editEmail').value.trim();

                if (!fullName || !email) {
                    alert('Please fill in all required fields.');
                    return;
                }

                try {
                    const res = await fetch('/api/user/profile', {
                        method: 'PATCH',
                        headers: {'Content-Type':'application/json'},
                        credentials: 'same-origin',
                        body: JSON.stringify({ fullName, email })
                    });
                    
                    if (!res.ok) throw new Error('Failed to update profile');

                    // Show success toast
                    const toast = document.createElement('div');
                    toast.className = 'position-fixed bottom-0 end-0 p-3';
                    toast.style.zIndex = '5';
                    toast.innerHTML = `
                        <div class="toast show" role="alert">
                            <div class="toast-header bg-success text-white">
                                <i class="bi bi-check-circle me-2"></i>
                                <strong class="me-auto">Success</strong>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                            </div>
                            <div class="toast-body">
                                Profile updated successfully!
                            </div>
                        </div>
                    `;
                    document.body.appendChild(toast);
                    setTimeout(() => toast.remove(), 3000);

                    loadProfile(false);
                } catch(error) {
                    alert('Error: ' + error.message);
                }
            };

            document.getElementById('cancelProfileBtn').onclick = function() { loadProfile(false); };
        }
    } catch (error) {
        container.innerHTML = `
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>Failed to load profile: ${error.message}</div>
            </div>
        `;
    }
}

window.onload = function() { loadProfile(false); };
</script>
