<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookLibrarySystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookLibrarySystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)

    <style>
        :root {
            --navbar-height: 70px;
            --primary-color: #6366f1;
            --primary-dark: #4f46e5;
        }

        .navbar {
            height: var(--navbar-height);
            background: white;
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary-color) !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-link {
            position: relative;
            padding: 0.5rem 1rem !important;
            color: #4b5563 !important;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: var(--primary-color) !important;
        }

        .nav-link.active {
            color: var(--primary-color) !important;
        }

        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 1rem;
            right: 1rem;
            height: 2px;
            background: var(--primary-color);
            border-radius: 2px;
        }

        .nav-item {
            display: flex;
            align-items: center;
        }

        .navbar-nav {
            gap: 0.5rem;
        }

        .auth-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-auth {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

        .btn-auth:hover {
            transform: translateY(-2px);
        }

        .main-container {
            min-height: calc(100vh - var(--navbar-height) - 80px);
        }

        .footer {
            padding: 0.5rem 0;
            font-size: 0.9rem;
            margin-top: auto;
        }

        .footer .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer a {
            text-decoration: none;
            margin-left: 1rem;
            color: inherit;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        .copyright {
            font-size: 0.85rem;
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .navbar-nav {
                padding: 1rem 0;
            }

            .auth-buttons {
                flex-direction: column;
                width: 100%;
                padding: 1rem 0;
            }

            .footer-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half"></i>
                    BookLibrary
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="StaffPortal">
                                        <i class="bi bi-speedometer2 me-2"></i>Staff Portal
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="ClaimRecords">
                                        <i class="bi bi-card-checklist me-2"></i>Claim Records
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/AdminDashboard">
                                        <i class="bi bi-gear-fill me-2"></i>Admin Dashboard
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house-door me-2"></i>Home
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Cart">
                                        <i class="bi bi-cart3 me-2"></i>Cart
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Orders">
                                        <i class="bi bi-bag me-2"></i>Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Bookmarks">
                                        <i class="bi bi-bookmark-heart me-2"></i>Bookmarks
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" href="/UserProfile">
                                    <i class="bi bi-person-circle me-2"></i>Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Pages" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <div class="auth-buttons">
                                <a class="btn btn-outline-primary btn-auth" asp-controller="Home" asp-action="Register">
                                    <i class="bi bi-person-plus me-2"></i>Register
                                </a>
                                <a class="btn btn-primary btn-auth" asp-controller="Pages" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                                </a>
                            </div>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-container" style="padding-top: var(--navbar-height);">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <span class="copyright">Â© 2025 - All rights reserved</span>
            <div>
                <a href="/Home"><i class="bi bi-house"></i> Home</a>
                <a href="/Privacy"><i class="bi bi-shield-check"></i> Privacy</a>
               
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Add active class to current nav item
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>
